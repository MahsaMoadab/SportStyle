
@{
    ViewData["Title"] = "ContactUs";
}

<div class="pm-5">
    <div class="container-login100">
        <div class="wrap-login100 contact-boxshadow">

            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/img/contact.png" alt="IMG">
            </div>

            <form dir="rtl" class="login100-form validate-form" method="post" action="">
                <span style="padding-bottom: 30px;" class="login100-form-title bold">
                    فرم تماس با ما
                </span>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" name="cname" placeholder="نام و نام خانوادگی" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>


                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" type="email" name="cemail" placeholder="ایمیل" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="form-group shadow-textarea wrap-input100 validate-input">
                    <textarea name="cmassage" style="padding: 15px 50px; border: none; align-content: center; height: 90px;"
                              class="input100" rows="5" cols="10" wrap="virtual" placeholder="متن پیام" required></textarea>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-info" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" name="submit" class="login100-form-btn">
                        ارسال پیام
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>


